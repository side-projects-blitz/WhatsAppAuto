{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        "target": "ES2020",
        "module": "commonjs",
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@utils/*": ["src/utils/*"],
            "@bot/*": ["src/bot/*"]
        },
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.spec.js",
        "**/*.test.js",
        "dist",
        "build",
        "coverage",
        "out-tsc"
    ]
}
